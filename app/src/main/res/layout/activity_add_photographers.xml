<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/photographer1">

<View
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/phot_grad"></View>
    <Button
        android:id="@+id/add_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/stroke_photo"
        android:layout_margin="30dp"
        android:text=" add photographers"
        android:onClick="add_photographer_Details"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_below="@id/add_button"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:id="@+id/photographer_recycler">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
