<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dj2">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dj_grad"></View>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT  Dj"
        android:textSize="20dp"
        android:textAllCaps="true"
        android:layout_margin="20dp"
        android:id="@+id/selec_txt"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>


    <Button
        android:id="@+id/skip_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_below="@+id/selec_txt"
        android:background="@drawable/stroke_dj"

        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:text=" skip"
android:onClick="skip_dj"


        />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_below="@id/skip_button"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:id="@+id/dj_recycler">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>

